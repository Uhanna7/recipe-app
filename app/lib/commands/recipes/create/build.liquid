{% parse_json object %}
  {
    "name": {{ object.name | json }},
    "img_url": {{ object.img_url | json }},
    "recipe": {{ object.recipe | json }},
    "ingredient_ids": {{ object.ingredient_ids | json }}
  }
{% endparse_json %}

{% liquid
  assign data = null | hash_merge: name: object.name, img_url: object.img_url, recipe: object.recipe, ingredient_ids: object.ingredient_ids
  return data
%}